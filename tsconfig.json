{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "node",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "srcs/dist"
	},
	"include": ["./srcs/**/*.ts", "./srcs/public/**/*.ts", "srcs/public/js/login.js", "prisma/**/*.ts"],
	"exclude": ["node_modules"]
}
