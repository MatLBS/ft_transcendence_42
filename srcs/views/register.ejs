<%- include('../components/navbar.html') %>
<div class="login">
	<img src="../public/images/login&register-bg.png" alt="login image" class="login__img">

	<div action="" class="login__form">
		<h1 class="login__title"><%= jsonLanguage.register.title %></h1>
		<div id="error_input" class="mb-2 text-red-600"></div>

		<div class="login__content">
			<div>
				<i class="bx bx-lock-alt"></i>
				<div class="login__box">
					<div class="login__box-input">
						<input type="text" id="username" required class="login__input" placeholder="">
						<label for="" class="login__label"><%= jsonLanguage.register.username %></label>
					</div>
				</div>
			</div>

			<div class="login__content">
				<div>
					<i class="bx bx-lock-alt"></i>
					<div class="login__box">
						<div class="login__box-input">
							<input type="email" id="email" required class="login__input" placeholder="">
							<label for="" class="login__label"><%= jsonLanguage.register.email %></label>
						</div>
					</div>
				</div>

				<div class="login__box flex align-center">
					<div class="w-11/12">
						<i class="ri-lock-2-line login__icon"></i>
						<div class="login__box-input">
							<input type="password" required class="login__input" id="password" placeholder="">
							<label for="" class="login__label"><%= jsonLanguage.register.password %></label>
							<i class="ri-eye-off-line login__eye"></i>
						</div>
					</div>
					<div class="w-1/12 flex items-center justify-center">
						<span class="material-symbols-outlined text-right" id="register-eye">visibility_off</span>
					</div>
				</div>

				<div class="login__content">
					<div>
						<i class="bx bx-lock-alt"></i>
						<div class="login__box-input">
							<input type="file" id="profile_picture" class="login__input" name="profile_picture" accept="image/*">
						</div>
					</div>
				</div>

				<div class="flex justify-center">
					<img
						id="preview_image"
						class="profile-image rounded-full w-auto"
						style="max-width: 200px;"
					/>
				</div>
			</div>

			<button id="confirm_button" class="login__button text-black text-center"><%= jsonLanguage.register.button %></button>
			<button id="register_button_google" class="login__button text-black text-center">Google Sign-in</button>
		</div>
	</div>
</div>
<%- include('../components/modal.html') %>
