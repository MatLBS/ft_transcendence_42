<div class="flex justify-center h-screen">
	<div class="border-2 border-indigo-500 h-1/2 w-1/2 mt-[10%] bg-gray-100 shadow-xl">
		<h1 class="text-5xl text-center mt-[10%]">update</h1>
		<div id="error_input"></div>
		<div class="flex justify-center items-center flex-col text-center m-[2%] gap-4 border-2 border-red-500">
			<div class="flex flex-col items-center w-1/2 h-12">
				<input type="text" id="username" name="username" placeholder="username" class="border-2 border-gray-500 w-full h-full rounded-l" value="<%= user.username %>">
			</div>
			<div class="flex flex-col items-center w-1/2 h-12">
				<input type="email" id="email" name="email" placeholder="email" class="border-2 border-gray-500 w-full h-full rounded-l" value="<%= user.email %>">
			</div>
			<div class="flex flex-col items-center w-1/2 h-12">
				<input type="password" id="pre_password" name="pre_password" placeholder="previous password" class="border-2 border-gray-500 w-full h-full rounded-l">
			</div>
			<div class="flex flex-col items-center w-1/2 h-12">
				<input type="password" id="new_password" name="new_password" placeholder="new password" class="border-2 border-gray-500 w-full h-full rounded-l">
			</div>
			<div class="flex flex-col items-center w-1/2 h-12">
				<input type="file" id="profile_picture" name="profile_picture" accept="image/*" class="border-2 border-gray-500 w-full h-full rounded-l">
			</div>
			<div class="profile-image-container">
				<img
					src="/uploads/<%= user.profilePicture %>"
					id="preview_image"
					alt="Photo de profil de <%= user.username %>"
					class="profile-image"
					style="max-width: 100px;"
				/>
			</div>
			<button id="update_button" class="bg-blue-500 rounded-xl px-10 py-2 max-w-40">Confirm</button>
		</div>
	</div>
</div>
