<div class="login">
	<img src="../public/images/login&register-bg.png" alt="login image" class="login__img">

	<div action="" class="login__form">
		<h1 class="login__title">Update</h1>
		<div id="error_input" class="mb-2"></div>

		<div class="login__content">
			<div>
				<i class="bx bx-lock-alt"></i>
				<div class="login__box">
					<div class="login__box-input">
						<input type="text" id="username" name="username" required class="login__input" value="<%= user.username %>">
						<label for="" class="login__label">Username</label>
					</div>
				</div>
			</div>

			<div class="login__content">
				<% if (!user.google) { %>
					<div>
						<i class="bx bx-lock-alt"></i>
						<div class="login__box">
							<div class="login__box-input">
								<input type="email" id="email" required class="login__input" value="<%= user.email %>">
								<label for="" class="login__label">Email</label>
							</div>
						</div>
					</div>

					<div class="login__box flex align-center">
						<div class="w-11/12">
							<i class="ri-lock-2-line login__icon"></i>
							<div class="login__box-input">
								<input type="password" required class="login__input" id="prev_password">
								<label for="" class="login__label">Previous Password</label>
								<i class="ri-eye-off-line login__eye"></i>
							</div>
						</div>
						<div class="w-1/12 flex items-center justify-center">
							<span class="material-symbols-outlined" id="prev_password_eye">visibility_off</span>
						</div>
					</div>

					<div class="login__box flex align-center">
						<div class="w-11/12">
						<i class="ri-lock-2-line login__icon"></i>
						<div class="login__box-input">
							<input type="password" id="new_password" required class="login__input">
							<label for="" class="login__label">New Password</label>
							<i class="ri-eye-off-line login__eye"></i>
						</div>
						</div>
						<div class="w-1/12 flex items-center justify-center">
							<span class="material-symbols-outlined" id="new_password_eye">visibility_off</span>
						</div>
					</div>
				<% } %>

				<div class="login__content">
					<div>
						<i class="bx bx-lock-alt"></i>
						<div class="login__box-input">
							<input type="file" id="profile_picture" class="login__input" name="profile_picture" accept="image/*">
						</div>
					</div>
				</div>

				<div class="flex justify-center">
					<img
						src="/uploads/<%= user.profilePicture %>"
						id="preview_image"
						alt="Photo de profil de <%= user.username %>"
						class="profile-image rounded-full h-32 w-auto"
						style="max-width: 200px;"
					/>
				</div>
			</div>
			<button id="<%= !user.google ? 'update_button' : 'update_button_google' %>" class="login__button text-black text-center">Confirm</button>
		</div>
	</div>
</div>
